{
  "name": "phmlabs/smoke",

  "minimum-stability": "dev",
  "prefer-stable": true,

  "require": {
    "php": ">= 5.4.0",
    "symfony/yaml": "~2.2",
    "symfony/console": "~2.2",
    "phmlabs/base": "dev-master",
    "phmlabs/init": "dev-master",
    "egeloen/http-adapter": "^0.8.0@dev"
  },
  "require-dev": {
    "fabpot/php-cs-fixer": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "whm\\Smoke\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "whm\\Smoke\\Test\\": "test/unit"
    }
  },
  "scripts" : {
     "cs" : "vendor/bin/php-cs-fixer fix $1",
     "test" : "vendor/bin/phpunit $1"
  },
  "bin": [
    "bin/Smoke.php"
  ]
}
